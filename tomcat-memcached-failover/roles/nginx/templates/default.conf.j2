upstream tomcat  {
{% for host in groups['webservers'] %}
      server {{ ansible_host }}:{{ tomcat_http_port }};
{% endfor %}
}

server {
    listen       80 default_server;
    server_name  {{ ansible_host }};
    include /etc/nginx/default.d/*.conf;

    location / {
      proxy_pass http://tomcat;
    }
}


